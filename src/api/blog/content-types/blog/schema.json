{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "singularName": "blog",
    "pluralName": "blogs",
    "displayName": "Blog",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files",
        "images"
      ]
    },
    "blocks": {
      "type": "dynamiczone",
      "components": [
        "shared.video",
        "shared.slider",
        "shared.seo",
        "shared.rich-text",
        "shared.quote",
        "shared.media",
        "shared.carousel"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "blogs"
    },
    "description": {
      "type": "text"
    }
  }
}
